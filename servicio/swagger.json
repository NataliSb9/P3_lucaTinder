  "host": "localhost:3000",
  "basePath": "/lucatinder",
  "schemes": ["http"],
  "consumes": ["application/json"],
  "produces": ["application/json"],
  "paths": {
    "/": {
      "get": {
        "description": "Returns all user from the Mongo Atlas data base Personas",
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "return all documemtes from data base Personas",
            "schema": {
              "type": "array",
              "items": "objects"
            }
          }
        }
      }
    },
    "/usuario/{id}": {
      "get": {
        "description": "Return one user from the Mongo Atlas data base Personas",
        "summary": "find usuarios by email",
        "produces": ["application/json"],
        "parameters": [{
          "name": "email",
          "in": "query",
          "description": "email to find user",
          "required": "true",
          "type": "string"
        }],
        "responses": {
          "200": {
            "description": "Usuario response",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "NO ENTIENDO BIEN ESTO ----> #/definitions/Pet"
              }
            }
          },
          "400": {
            "description": "unexpected error"
          }
        }

      }
    },
    "/usuario": {
      "put": {
        "summary": "add email of another users inside the array arrLikes or arrDislike",
        "consumes": "application/json",
        "produces": "application/json",
        "parameters": {
          "name": "body",
          "in": "body",
          "description": "email of the candidate who likes you or dislikes you that to be added to arrLikes or arrDislike",
          "required": "true",
          "type": "string"
        },
        "responses": {
          "200": {
            "description": "Actualizado"
          },
          "400": {
            "description": "error"
          }
        }
      }
    },
    "/join": {
      "post": {
        "summary": "add a new user from register",
        "consumes": "application/json",
        "produces": "application/json",
        "parameters": {
          "name": "body",
          "in": "body",
          "description": "Usuario object that needs to be added to the Personas collection",
          "required": "true",
          "type": "string"
        },
        "responses": {
          "200": {
            "description": "usuario creado"
          },
          "400": {
            "description": "error"
          }
        }
      }

    }
  }
